<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/date_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textSize="14sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_label">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/location_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_directions_grey"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_directions_grey"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/location_coordinates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_place_grey"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_place_grey"
                android:ellipsize="end"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textSize="12sp"
                android:textStyle="italic" />
            <!--
                        <TextView
                            android:id="@+id/location_date"
                            android:textStyle="italic"
                            android:textSize="12sp"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="22dp"
                            android:layout_marginStart="22dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" />-->

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>